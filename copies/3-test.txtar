package main

import (
	"fmt"
	"sync"
	"time"
)

func main() {
	var mu sync.RWMutex
	copies := 1
	go func() {
		mu.RLock()
		defer mu.Unlock()
		if copies > 0 {
			mu.Lock()
			copies--
			fmt.Println("Customer A got the book")
		}
	}()
	go func() {
		mu.RLock()
		defer mu.Unlock()
		if copies > 0 {
			mu.Lock()
			copies--
			fmt.Println("Customer B got the book")
		}
	}()
	time.Sleep(10 * time.Second)
}
